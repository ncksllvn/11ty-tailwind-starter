<html>
{% include 'head.njk' %}
<body>

  <div class="min-h-screen py-6 px-6 sm:px-12 max-w-xl mx-auto">

    <div class="prose my-4">
      {{ content | safe }}
    </div>

    <h2 class="text-xl">Stories</h2>
    <ul class="ml-4 mb-4">
    {%- for story in collections.stories -%}
      <li>
        <a class="text-blue-600" href="{{ story.url | url }}">{{ story.data.title }}</a>
      </li>
    {%- endfor -%}
    </ul>

    <h2 class="text-xl">Projects</h2>
    <ul class="ml-4 mb-4">
    {%- for project in collections.projects -%}
      <li>
        <a class="text-blue-600" href="{{ project.url | url }}">{{ project.data.title }}</a>
      </li>
    {%- endfor -%}

    </ul>
  </div>
</body>
</html>
