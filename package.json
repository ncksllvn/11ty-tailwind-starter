{
  "name": "personal-blog",
  "version": "1.0.0",
  "description": "nick's personal blog",
  "main": "index.js",
  "engines": {
    "node": "16.3.0"
  },
  "scripts": {
    "build": "npm-run-all clean build:11ty build:tailwind",
    "build:11ty": "eleventy",
    "build:tailwind": "tailwindcss -i ./_style/main.pcss -o ./_site/style/main.css",
    "build:production": "NODE_ENV=production npm-run-all clean build:11ty \"build:tailwind -- --minify\"",
    "clean": "rimraf _site",
    "watch": "npm-run-all clean build:11ty -p watch:11ty watch:tailwind",
    "watch:11ty": "eleventy --serve",
    "watch:tailwind": "tailwindcss -i ./_style/main.pcss -o ./_site/style/main.css --watch"
  },
  "author": "ncksllvn",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@tailwindcss/typography": "^0.4.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.7.1",
    "tailwindcss": "^2.2.7"
  }
}
